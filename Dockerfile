FROM node:14

# Создание директории приложения внутри образа
WORKDIR /usr/src/app

# Копирование файлов 'package.json' и 'package-lock.json' (если есть)
COPY package*.json ./

# Установка зависимостей
RUN npm install

# Копирование всех файлов проекта в рабочую директорию образа
COPY . .

# Открытие порта 8080 для доступа к серверу извне контейнера
EXPOSE 8080

# Запуск сервера при старте контейнера
CMD [ "node", "server/server.js" ]
